<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.devkgm.app.departments.DepartmentDAO">
	<update id="update" parameterType="com.devkgm.app.departments.DepartmentDTO">
		UPDATE DEPARTMENTS SET DEPARTMENT_NAME = #{department_name}, MANAGER_ID=#{manager_id}, LOCATION_ID=#{location_id} WHERE DEPARTMENT_ID=#{department_id}
	</update>
	<delete id="delete" parameterType="com.devkgm.app.departments.DepartmentDTO">
		DELETE DEPARTMENTS WHERE DEPARTMENT_ID=#{department_id}
	</delete>
	<insert id="add" parameterType="com.devkgm.app.departments.DepartmentDTO">
		INSERT INTO DEPARTMENTS VALUES (DEPARTMENTS_SEQ.NEXTVAL, #{department_name},#{manager_id},#{location_id})
	</insert>
	<select id="getList" resultType="com.devkgm.app.departments.DepartmentDTO">
		SELECT * FROM DEPARTMENTS
	</select>
	<select id="getDetail" resultType="com.devkgm.app.departments.DepartmentDTO" parameterType="com.devkgm.app.departments.DepartmentDTO">
		SELECT * FROM DEPARTMENTS WHERE DEPARTMENT_ID = #{department_id}
	</select>
</mapper>
