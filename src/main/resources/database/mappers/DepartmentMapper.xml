<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.devkgm.app.departments.DepartmentDAO">
	<select id="getList" resultType="com.devkgm.app.departments.DepartmentDTO">
		SELECT * FROM DEPARTMENTS
	</select>
	<select id="getDetail" resultType="com.devkgm.app.departments.DepartmentDTO" parameterType="com.devkgm.app.departments.DepartmentDTO">
		SELECT * FROM DEPARTMENTS WHERE DEPARTMENT_ID = #{department_id}
	</select>
</mapper>
